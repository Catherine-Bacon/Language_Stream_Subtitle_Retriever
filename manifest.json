{
  "name": "Netflix Data Inspector",
  "description": "Intercepts and logs Netflix network data to the service worker console for debugging.",
  "version": "1.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_start",
      "world": "MAIN" 
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.netflix.com/*"
  ]
}