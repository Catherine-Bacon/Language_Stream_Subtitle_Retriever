{
    "manifest_version": 3,
    "name": "Netflix Subtitle Downloader",
    "version": "1.0",
    "description": "Automatically detects and downloads the TTML subtitle file when a Netflix video starts playing.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "webRequest",
        "downloads",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.netflix.com/*"
    ]
}
