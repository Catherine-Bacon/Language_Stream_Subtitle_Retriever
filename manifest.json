{
  "name": "TTML Subtitle Downloader",
  "description": "Monitors Netflix network traffic to find and download TTML subtitle files.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html", 
    "default_icon": "logo.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage", 
    "tabs", 
    "webRequest", 
    "downloads"
  ], 
  "host_permissions": [
    "*://*.netflix.com/*", 
    "*://*.nflxvideo.net/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
